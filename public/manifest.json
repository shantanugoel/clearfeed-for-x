{
    "manifest_version": 3,
    "name": "Agenda Revealer",
    "version": "0.2.0",
    "description": "Identifies and replaces/hides configured phrases or semantically similar content on X (formerly Twitter).",
    "permissions": [
        "storage",
        "scripting",
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "*://x.com/*"
    ],
    "background": {
        "service_worker": "src/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://x.com/*"
            ],
            "js": [
                "src/content-script.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "options_page": "src/options/options.html",
    "action": {
        "default_title": "Agenda Revealer Settings",
        "default_popup": "src/options/options.html"
    }
}