{
    "manifest_version": 3,
    "name": "ClearFeed for X",
    "version": "0.3.0",
    "description": "Filter and modify content on X (formerly Twitter) based on your rules. Replaces/hides configured phrases or semantically similar content.",
    "author": "Shantanu Goel",
    "homepage_url": "https://github.com/shantanugoel/clearfeed-for-x",
    "permissions": [
        "storage",
        "scripting",
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "*://x.com/*"
    ],
    "background": {
        "service_worker": "src/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://x.com/*"
            ],
            "js": [
                "src/content-script.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "options_page": "src/options/options.html",
    "action": {
        "default_title": "ClearFeed for X Settings",
        "default_popup": "src/options/options.html"
    }
}